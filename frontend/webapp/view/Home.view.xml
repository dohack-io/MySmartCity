<mvc:View controllerName="sap.ui.demo.basicTemplate.controller.Home" 
	displayBlock="true" 
	xmlns="sap.m" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:l="sap.ui.layout" 
	xmlns:f="sap.ui.layout.form" 
	xmlns:core="sap.ui.core" 
	xmlns:u="sap.ui.unified">
	<Page id="page" 
		title="{i18n>titleStart}">
		<l:VerticalLayout class="sapUiContentPadding equalColumns" 
			width="100%">
			<l:content>
				<FlexBox width="95%" 
					class="columns" 
					alignItems="Stretch">
					<items>
						<Tree headerText="Antragsformulare" 
							id="Tree" 
							mode="SingleSelectMaster" 
							selectionChange="onMenuSelChanged" 
							items="{path: 'formModel>/'}">
							<StandardTreeItem title="{formModel>text}"/>
						</Tree>
						<List id="list" 
							headerText="Feed Entries" 
							items="{listModel>/}">
							<FeedListItem sender="{listModel>title}" 
								icon="{listModel>icon}" 
								iconDensityAware="false" 
								timestamp="{listModel>date}" 
								text="{listModel>content}">
							</FeedListItem>
						</List>
					</items>
				</FlexBox>
				<FlexBox width="95%" 
					class="columns" 
					alignItems="Stretch">
					<items>
						<PlanningCalendar id="pc" 
							rows="{calendarModel>/}">
							<rows>
								<PlanningCalendarRow title="{calendarModel>categoryName}" 
								appointments="{path : 'calendarModel>events', templateShareable: 'true'}">
									<appointments>
										<u:CalendarAppointment startDate="{calendarModel>start}" 
											endDate="{calendarModel>end}" 
											color="{calendarModel>color}" 
											icon="{pic}" 
											title="{calendarModel>title}" 
											text="{calendarModel>description}" 
											type="{type}" 
											tentative="{calendarModel>tenative}">
										</u:CalendarAppointment>
									</appointments>
								</PlanningCalendarRow>
							</rows>
						</PlanningCalendar>
					</items>
				</FlexBox>
			</l:content>
		</l:VerticalLayout>

	</Page>
</mvc:View>